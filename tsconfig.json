{
  "$schema": "http://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "checkJs": false,
    "charset": "utf-8",
    "jsx": "preserve",
    "module": "commonjs",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitUseStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "sourceMap": true,
    "strictNullChecks": true
  },
  "files": [
    "./src/main/index.ts",
    "./src/renderer/index.ts"
  ]
}
